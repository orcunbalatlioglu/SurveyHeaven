@model LoginRequest
@{
    ViewData["Title"] = "Login";
}

<div class="row d-flex justify-content-center">
    <div class="col-4">
        <form asp-action="Login" asp-controller="User">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">E-posta Adresi</label>
                <input type="email" asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Şifre</label>
                <input type="password" asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Giriş Yap" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
